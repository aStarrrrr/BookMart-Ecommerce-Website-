@model BookMart.Models.HomeViewModel
@using System.Globalization

@{
    ViewData["Title"] = "BookMart - Your Online Bookstore";
    Layout = "userCommonLayout";
}

<link href="~/css/user.css" rel="stylesheet" />

<style>
    .book-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        border: none;
        border-radius: 1rem;
        overflow: hidden;
        background: #fff;
    }

    .book-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    }

    .book-card .card-img-top {
        height: 300px;
        object-fit: contain;
        background: #f8f9fa;
        padding: 1rem;
    }

    .book-card .card-body {
        padding: 1rem;
    }

    .book-card .card-title {
        font-size: 1rem;
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .book-card .card-text {
        font-size: 0.875rem;
        color: #6c757d;
    }

    .book-card .btn {
        border-radius: 0.5rem;
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
    }

    .book-card .btn-primary {
        background-color: #000;
        border-color: #000;
    }

    .book-card .btn-outline-primary {
        color: #000;
        border-color: #000;
    }

    .book-card .btn-primary:hover,
    .book-card .btn-outline-primary:hover {
        background-color: #333;
        border-color: #333;
        color: #fff;
    }

    .toast {
        position: fixed;
        top: 1rem;
        right: 1rem;
        z-index: 1050;
    }

    /* Login Modal Styles */
    .login-modal .modal-content {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
    }

    .login-modal .modal-header {
        background: #000;
        color: #fff;
        border: none;
        padding: 1.5rem;
    }

    .login-modal .modal-title {
        font-size: 1.5rem;
        font-weight: 600;
    }

    .login-modal .modal-body {
        padding: 2rem;
        text-align: center;
    }

    .login-modal .modal-body p {
        font-size: 1.1rem;
        color: #666;
        margin-bottom: 1.5rem;
    }

    .login-modal .modal-footer {
        border: none;
        padding: 1.5rem;
        justify-content: center;
        gap: 1rem;
    }

    .login-modal .btn {
        padding: 0.75rem 2rem;
        font-weight: 500;
        border-radius: 0.5rem;
        min-width: 120px;
    }

    .login-modal .btn-primary {
        background: #000;
        border-color: #000;
    }

    .login-modal .btn-outline-primary {
        color: #000;
        border-color: #000;
    }

    .login-modal .btn-primary:hover {
        background: #333;
        border-color: #333;
    }

    .login-modal .btn-outline-primary:hover {
        background: #f8f9fa;
        color: #000;
    }

    .login-modal .modal-icon {
        font-size: 3rem;
        color: #000;
        margin-bottom: 1rem;
    }
</style>

<!-- Toast Container for notifications -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="bookAddedToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="fas fa-check-circle me-2"></i>
                <span id="toastMessage"></span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

<!-- Hero Banner -->
